{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-console": "warn",
        "prettier/prettier": [
            "error",
            {
              "#": "prettier config in here :)",
              "singleQuote": true,
              "semi": false,
              "tabWidth": 2,
              "trailingComma": "es5",
              "endOfLine": "auto"
            }
        ]
    }
}
